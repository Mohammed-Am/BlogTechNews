<!DOCTYPE html>
<html lang="en">
     <%- include('./partials/head.ejs') %> 
<body>
     
     <%- include('./partials/nav.ejs') %>        
                              <h1>All News TECH</h1>
               <div class="cards">
                    <% if (blogs.length > 0){%>
                         <% blogs.forEach(blog => { %>
                              <a class="single" href="/blogs/<%= blog._id %>">  
                              <img src="<%= blog.imgsrc  %> " alt="image news">                    
                              <h3><%= blog.title  %> </h3>
                              <p><%= blog.snippet %> </p>
                         </a>
                      <% }) %>
                    <% } else{ %>
                              <p>There are no blogs to display...</p>
                         <% } %>   

                </div>
                
                        

               
             





     
</body>
</html>